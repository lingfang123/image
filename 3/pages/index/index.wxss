}
.classify {
  background-color: #fff;
  height: 330rpx;
  /*align-items: center; 上下居中 */
  text-align: center;
  border: 1rpx solid violet;
}
.classify_1 {
  display: flex;
  flex-direction: row;
}
.classify_2 {
  height: 160rpx;
  width: 25%;
  margin-top: 2rpx;
  font-size: 26rpx;
  /*border: 1rpx solid red;*/
}
.classify_i image {
  margin-top: 10rpx;
